<h1 class="my-10">Rooms#index</h1>
<div class="container">
  <div class="w-full flex flex-nowrap justify-between gap-4">
    <div class="w-4/12">
      <h4 class=""><%= current_user.email%></h4>
 
        <h5>Users</h5>
        <%= turbo_stream_from "users" %>
        <div id="users">
          <%= render @users %>
        </div>
      
        <h5>Rooms</h5>
        <%= turbo_stream_from "rooms" %>
        <div id="rooms">
          <%= render @rooms %>
        </div>

        <%= render "layouts/new_room_form"%>
    </div>
    <div class="w-8/12">     
      <% if @single_room %>
        <div id="single_room">
          <h4><%= @user&.email || @single_room.name %></h4>
          <%= turbo_stream_from @single_room %>
          <div id="messages">
            <%= render @messages %>
          </div>
          <%= render "layouts/new_message_form" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

